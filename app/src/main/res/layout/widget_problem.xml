<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="8dp">

    <!-- Заголовок виджета -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Zabbix Server"
            android:textStyle="bold"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <ImageButton
            android:id="@+id/widget_refresh_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_rotate"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Refresh" />

    </LinearLayout>

    <!-- Время последнего обновления -->
    <TextView
        android:id="@+id/widget_last_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last update: --:--"
        android:textSize="12sp"
        android:textColor="#666" />

    <!-- Фильтры Ack и Maint (заменили CheckBox на TextView) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/widget_ack_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ack: OFF"
            android:textSize="12sp"
            android:padding="4dp"
            android:background="#f0f0f0" />

        <TextView
            android:id="@+id/widget_maint_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maint: OFF"
            android:textSize="12sp"
            android:padding="4dp"
            android:layout_marginStart="8dp"
            android:background="#f0f0f0" />

    </LinearLayout>

    <!-- Список проблем -->
    <ListView
        android:id="@+id/widget_problems_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp" />

    <!-- Пустой вид -->
    <TextView
        android:id="@+id/widget_empty_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No problems"
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout>
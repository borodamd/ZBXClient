<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_empty_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/widget_background_dark"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configure Widget"
        android:textColor="@color/widget_text_primary_dark"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tap to configure widget settings"
        android:textColor="@color/widget_text_secondary_dark"
        android:textSize="14sp" />

</LinearLayout>
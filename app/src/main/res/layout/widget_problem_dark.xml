<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/widget_background_dark"
    android:padding="8dp">

    <!-- Header с компактными иконками -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/widget_text_primary_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Компактные иконки фильтров -->
        <ImageView
            android:id="@+id/widget_ack_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/checkbox_on_background"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Ack Filter"
            android:layout_marginEnd="24dp" />  <!-- Большой отступ -->

        <ImageView
            android:id="@+id/widget_maint_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_manage"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Maint Filter"
            android:layout_marginEnd="24dp" />  <!-- Большой отступ -->

        <!-- Кнопка обновления -->
        <ImageButton
            android:id="@+id/widget_refresh_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_rotate"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Refresh" />


    </LinearLayout>

    <!-- Status and update info -->
    <TextView
        android:id="@+id/widget_last_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/widget_text_secondary_dark"
        android:textSize="10sp"
        android:layout_marginTop="2dp" />

    <!-- Problems list -->
    <ListView
        android:id="@+id/widget_problems_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/widget_divider_dark"
        android:dividerHeight="1dp" />

    <!-- Empty view -->
    <TextView
        android:id="@+id/widget_empty_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No problems"
        android:textColor="@color/widget_text_secondary_dark"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="16dp" />

</LinearLayout>